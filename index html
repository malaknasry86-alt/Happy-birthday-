<script>
setTimeout(()=>{
document.getElementById("intro").classList.add("hidden");
document.getElementById("countdown").classList.remove("hidden");
},2000);

let counter=3;
let interval=setInterval(()=>{
counter--;
if(counter>0){
document.getElementById("counter").innerText=counter;
}else{
clearInterval(interval);
document.getElementById("countdown").classList.add("hidden");
document.getElementById("midnight").classList.remove("hidden");

setTimeout(()=>{
document.getElementById("midnight").classList.add("hidden");
document.getElementById("celebrate").classList.remove("hidden");
createConfetti();
},2000);
}
},1000);

function stageMessage(){
document.getElementById("celebrate").classList.add("hidden");
document.getElementById("message").classList.remove("hidden");
}

function stageMirror(){
document.getElementById("message").classList.add("hidden");
document.getElementById("mirror").classList.remove("hidden");
}

function stageFuture(){
document.getElementById("mirror").classList.add("hidden");
document.getElementById("future").classList.remove("hidden");
}

function stageEnd(){
document.getElementById("future").classList.add("hidden");
document.getElementById("end").classList.remove("hidden");
}

function createConfetti(){
for(let i=0;i<70;i++){
let conf=document.createElement("div");
conf.classList.add("confetti");
conf.style.left=Math.random()*100+"vw";
conf.style.backgroundColor=["#b08968","#e8d8c3","#7f5539"][Math.floor(Math.random()*3)];
conf.style.animationDuration=(3+Math.random()*4)+"s";
document.body.appendChild(conf);
}
}
</script>

